<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="cn.umafan.lib.android.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_recommend"
        android:name="cn.umafan.lib.android.ui.recommend.RecommendFragment"
        android:label="@string/recommend"
        tools:layout="@layout/fragment_recommend" />

    <fragment
        android:id="@+id/nav_favorites"
        android:name="cn.umafan.lib.android.ui.favorites.FavoritesFragment"
        android:label="@string/my_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/nav_history"
        android:name="cn.umafan.lib.android.ui.history.HistoryFragment"
        android:label="@string/history"
        tools:layout="@layout/fragment_histroy" />

    <fragment
        android:id="@+id/nav_thanks"
        android:name="cn.umafan.lib.android.ui.thanks.ThanksFragment"
        android:label="@string/thanks"
        tools:layout="@layout/fragment_favorites" />

    <activity
        android:id="@+id/nav_setting"
        android:name="cn.umafan.lib.android.ui.setting.SettingActivity"
        android:label="@string/action_settings"
        tools:layout="@layout/activity_setting"
        />

</navigation>